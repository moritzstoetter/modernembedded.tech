---
import Nav from "../components/Nav.astro";
import { getLangFromUrl } from "../i18n/utils";
import "../base.css";
import Footer from "../components/Footer.astro";

const lang = getLangFromUrl(Astro.url);
---

<html lang={lang} class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Cutting edge software development for embedded devices in modern C++."
    />
    <meta
      name="keywords"
      content="Freelance, C++, Embedded, RTOS, Software Developer, BLE, Wifi, Firmware, Senior Software Developer, Software Architect"
    />
    <title>modern embedded</title>
    <link rel="icon" type="image/svg+xml" href="/public/favicon.svg" />
    <!-- Check for dark mode to avoid light/dark theme blinking -->
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="flex flex-col justify-between min-h-screen bg-backgroundLight dark:bg-backgroundDarker">
    <div class="relative w-full max-w-5xl lg:mx-auto">
      <Nav />
      <main>
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
