---
const { narrow, wide, customClass } = Astro.props;

const className = [
  "grid grid-cols-1 mx-4 md:grid-cols-2 lg:mx-0",
  narrow && "gap-8 pb-8",
  wide && "gap-16 pb-16",
  customClass && `${customClass}`,
]
  .filter(Boolean)
  .join(" ");
---

<section class={className}>
  <slot />
</section>
